<h2>
    <%= book.title %>
</h2>
<img width="100" height="150" src="<%= book.coverImagePath %>" alt="Book image">
<div>User: <%= book.user.name %>
</div>
<div>Publish Date: <%= book.publishDate.toDateString() %>
</div>
<div>Page Count: <%= book.pageCount %>
</div>
<div>Description: <%= book.description %>
</div>

<a href="/books/<%= book.id %>/edit">Edit</a>
<%- include('../partials/deleteForm', 
{url: `/books/${book.id}`}) %>
<a href="/users/<%= book.user.id %>">View User</a>