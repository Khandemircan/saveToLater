<h2 class="page-header">
    <%= book.title %>
</h2>
<img width="100" height="150" src="<%= book.coverImagePath %>" alt="Book image">
<div>User: <%= book.user.name %>
</div>
<div>Date: <%= book.publishDate.toDateString() %>
</div>
<div>Length: <%= book.pageCount %>
</div>
<div>Description: <%= book.description %>
</div>
<div class="btn-row">
    <a class="btn btn-primary" href="/books/<%= book.id %>/edit">Edit</a>
    <%- include('../partials/deleteForm', {url: `/books/${book.id}`}) %>
    <a class="btn btn-primary" href="/users/<%= book.user.id %>">View User</a>
</div>